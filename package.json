{
  "name": "insights-mcp",
  "version": "1.0.0",
  "description": "MCP server for persistent memory storage in Claude Code sessions",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "insights-mcp": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "npm run build && npm run test:unit && npm run test:smoke",
    "test:unit": "node --test tests/database.test.mjs tests/stdio.test.mjs",
    "test:smoke": "node --test tests/smoke_http.test.mjs",
    "test:report": "npm run build && node --test --test-reporter tap tests/database.test.mjs tests/stdio.test.mjs tests/smoke_http.test.mjs > test-results.tap"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "memory",
    "insights"
  ],
  "author": "",
  "license": "GPL-3.0-only",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "better-sqlite3": "^11.7.0",
    "commander": "^12.1.0",
    "express": "^4.21.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  }
}
